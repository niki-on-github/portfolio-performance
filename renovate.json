{
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 4am"
  ],
  "automerge": true,
  "ignoreTests": true,
  "platformAutomerge": true,
  "prHourlyLimit": 99,
  "prConcurrentLimit": 99,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "ARG PP_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "portfolio-performance/portfolio",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "extractVersionTemplate": "^(?<version>\\d+\\.\\d+\\.\\d+)",
      "currentValueTemplate": "{{#if currentValue}}{{{currentValue}}}{{else}}0.0.0{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "portfolio-performance/portfolio"
      ],
      "extractVersion": "^(?<version>\\d+\\.\\d+\\.\\d+)"
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
